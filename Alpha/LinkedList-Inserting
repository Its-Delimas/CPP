#include <iostream>
using namespace std;

// Node structure for singly linked list
struct Node {
  int data;   // value stored in the node
  Node *next; // pointer to the next node
};

// Function to insert a new node at the beginning (head) of the list
void insertAtBeginning(Node *&head, int value) {
  // 1. Create a new node in heap memory
  Node *newNode = new Node;

  // 2. Put the data in the new node
  newNode->data = value;

  // 3. New node should point to the current head
  newNode->next = head;

  // 4. Move head to point to the new node
  head = newNode;
}

int main() {
  Node *head = nullptr; // start with an empty list

  // Insert a few nodes at the beginning
  insertAtBeginning(head, 30); // list: 30
  insertAtBeginning(head, 20); // list: 20 -> 30
  insertAtBeginning(head, 10); // list: 10 -> 20 -> 30

  // Print the list to check
  cout << "Linked list elements: ";
  Node *temp = head;
  while (temp != nullptr) { // traverse until end (NULL)
    cout << temp->data << " ";
    temp = temp->next;
  }
  cout << endl;

  return 0;
}